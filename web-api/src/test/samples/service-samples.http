### ######### Etapa 1 identificação do cliente e criação de Carrinho
###
# @name Identifica Cliente
# Identificar cliente pelo CPF
GET http://localhost:8090/cliente?cpf=12332112340

###
# @name Novo carrinho cliente identificado
# Inicializar carrinho - Opção 1 - a partir de cliente identificado
POST http://localhost:8090/carrinho
Content-Type: application/json

{
  "idCliente": 1
}

###
# @name Carrinho existente cliente identificado
# Inicializar carrinho - Opção 1.1 - a partir de cliente identificado (recuperou anterior)
POST http://localhost:8090/carrinho
Content-Type: application/json

{
  "idCliente": 2
}

###
# @name Novo carrinho cliente não identificado
# Inicializar carrinho - Opção 2 - cliente anônimo
POST http://localhost:8090/carrinho
Content-Type: application/json

{
  "nomeCliente": "Cliente José"
}

###
# @name Novo carrinho e cadastrar cliente
# Inicializar carrinho - Opção 2 - cliente anônimo
POST http://localhost:8090/carrinho
Content-Type: application/json

{
  "nomeCliente": "Cliente Maria",
  "cpf": "11122233396",
  "email": "maria.cliente@example.org"
}

###
# @name Consultar carrinho
GET http://localhost:8090/carrinho/1


### ######### Etapa 2 seleção de itens
###
# @name Consulta cardápio
GET http://localhost:8090/cardapio


###
# @name Add Item to Carrinho
POST http://localhost:8090/carrinho/4
Content-Type: application/json

{
    "idItemCardapio": 1
}

###
# @name Excluir itens do Carrinho
DELETE http://localhost:8090/carrinho/1/itens/1
Content-Type: application/json


###
# @name Set observacoes no carrinho
PUT http://localhost:8090/carrinho/1/obs
Content-Type: application/json

{
  "observacoes": "Muito sal na batatinha por favor"
}

### ######### Etapa 3 checkout
###
# @name Listar formas pagamento
GET http://localhost:8090/pagamento/opcoes


###
# @name Criar pedido
POST http://localhost:8090/pedidos
Content-Type: application/json

{
  "idCarrinho": 4,
  "formaPagamento": "DINHEIRO"
}


### ######### Etapa 4 Acompanhamento e preparação
###
# @name Listar pedidos recebidos
GET http://localhost:8090/pedidos?status=RECEBIDO

###
# @name Validar pedido
POST http://localhost:8090/pedidos/5/validar

###
# @name Cancelar pedido
POST http://localhost:8090/pedidos/4/cancelar

###
# @name Listar pedidos em preparação (cozinha)
GET http://localhost:8090/pedidos?status=PREPARACAO

###
# @name Listar pedidos com atraso
GET http://localhost:8090/pedidos?atraso=true

###
# @name Atualizar pedido Pronto
POST http://localhost:8090/pedidos/5/setPronto

###
# @name Finalizar pedido
POST http://localhost:8090/pedidos/5/finalizar



